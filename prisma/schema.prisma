generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum BusinessType {
  MARCA_PERSONAL
  EMPRESA
  ECOMMERCE
  AGENCIA
}

enum BusinessStatus {
  ACTIVE
  DELETED
}

enum MemberRole {
  ADMIN
  VIEWER
}

enum UserRole {
  SUPER_ADMIN
  CLIENT
}

enum CoverageArea {
  LOCAL
  NACIONAL
  INTERNACIONAL
}

enum BrandTone {
  FORMAL
  JUVENIL
  PROFESIONAL
  PREMIUM
  DIVERTIDO
  CERCANO
  MOTIVADOR
  SERIO
  EMOCIONAL
  INFORMAL
}

enum BrandLanguageLevel {
  SIMPLE
  MEDIO
  AVANZADO
}

enum TargetGender {
  HOMBRE
  MUJER
  MIXTO
}

enum AverageTicket {
  BAJO
  MEDIO
  ALTO
}

enum PurchaseFrequency {
  OCASIONAL
  RECURRENTE
}

enum VisualStyle {
  MINIMALISTA
  MODERNO
  ELEGANTE
  COLORIDO
  OSCURO
}

model User {
  id                String           @id @default(uuid())
  email             String           @unique
  name              String?
  image             String?
  passwordHash      String?
  role              UserRole         @default(CLIENT)
  emailVerified     DateTime?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  businessesCreated Business[]       @relation("BusinessCreator")
  memberships       BusinessMember[]
  accounts          Account[]
  sessions          Session[]
  planningOrders    PlanningOrder[]
}

model Business {
  id               String              @id @default(uuid())
  name             String
  type             BusinessType        @default(EMPRESA)
  status           BusinessStatus      @default(ACTIVE)
  imageUrl         String?
  description      String?
  goals            String?
  valueProposition String?
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
  createdById      String?
  createdBy        User?               @relation("BusinessCreator", fields: [createdById], references: [id])
  members          BusinessMember[]
  baseConfig       BusinessBaseConfig?
  planningOrders   PlanningOrder[]
  products         Product[]
}

model BusinessMember {
  id         String     @id @default(uuid())
  userId     String
  businessId String
  role       MemberRole @default(VIEWER)
  createdAt  DateTime   @default(now())
  user       User       @relation(fields: [userId], references: [id])
  business   Business   @relation(fields: [businessId], references: [id])

  @@unique([userId, businessId])
}

model BusinessBaseConfig {
  id         String   @id @default(uuid())
  businessId String   @unique
  business   Business @relation(fields: [businessId], references: [id])

  yearsInMarket Int?
  country       String?
  city          String?
  coverageArea  CoverageArea?

  brandTone          BrandTone?
  brandPersonality   String? // CSV de tags
  brandLanguageLevel BrandLanguageLevel?
  allowedEmojis      Boolean             @default(true)
  forbiddenWords     String? // CSV de tags

  targetAgeRange   String?
  targetGender     TargetGender?
  mainPainPoint    String?
  mainDesire       String?
  mainObjection    String?
  buyingMotivation String?

  mainProducts      String?
  averageTicket     AverageTicket?
  purchaseFrequency PurchaseFrequency?

  activeChannels String? // CSV
  mainChannel    String?

  visualStyle VisualStyle?
  brandColors String? // CSV de colores HEX

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- ENUMS NECESARIOS PARA LA ORDEN DE PLANIFICACIÓN ---

enum PlanningObjective {
  AUMENTAR_VENTAS
  GENERAR_AWARENESS
  LANZAMIENTO_PRODUCTO
  FIDELIZACION_COMUNIDAD
  TRAFICO_WEB
  EDUCACION_TUTORIALES
  OTRO
}

enum AssetSource {
  CLIENT_PROVIDED // El usuario tiene fotos/videos
  AI_GENERATED // Se usarán imágenes de stock o generadas por IA
  MIXED // Combinación de ambos
}

enum PlanningStatus {
  DRAFT
  ORDER_CREATED // Orden lista para procesar (Input Módulo 3)
  IDEAS_GENERATED // Ideas generatedas (Listo para Aprobación Módulo 5)
  IDEAS_APPROVED // Planificación aprobada
  COMPLETED
  CANCELLED
}

enum ChannelFormat {
  VIDEO
  STATIC // Imagen única
  CAROUSEL
  STORY
}

// --- MODELO PRINCIPAL DE LA ORDEN DE PLANIFICACIÓN ---

model PlanningOrder {
  id              String         @id @default(uuid())
  businessId      String
  createdByUserId String
  status          PlanningStatus @default(ORDER_CREATED)

  // I. ENFOQUE TEMPORAL Y OBJETIVO (FECHAS Y QUÉ QUEREMOS)
  startDate DateTime          @db.Date // Inicio del rango a planificar
  endDate   DateTime          @db.Date // Fin del rango a planificar
  objective PlanningObjective @default(AUMENTAR_VENTAS)

  // IDs de los productos/servicios priorizados para este plan
  priorityProductIds String[]

  // Eje temático o foco adicional ingresado por el usuario
  additionalFocus String? @db.Text

  // Referencias o inspiración (URLs, cuentas, etc)
  references String? @db.Text

  // II. DECLARACIONES DE CANALES Y FRECUENCIA
  frequencyBase Float @default(1.0) // Frecuencia mínima diaria general

  // Reglas de cada canal. Se usa JSON para almacenar la estructura de la matriz/tabla de canales.
  // Ejemplo: { 'instagram': { 'formats': ['VIDEO', 'STORY'] }, ... }
  channelRules Json

  // III. RECURSOS Y RESTRICCIONES OPERACIONALES
  assetSource     AssetSource @default(MIXED)
  productionNotes String?     @db.Text // Restricciones de producción ingresadas

  // LOGS Y RELACIONES
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  business Business @relation(fields: [businessId], references: [id])
  creator  User     @relation(fields: [createdByUserId], references: [id])

  // Relación con las ideas generadas a partir de esta orden (Para el iterador de n8n)
  contentIdeas ContentIdea[]
}

// Placeholder for ContentIdea to satisfy relation
model ContentIdea {
  id              String        @id @default(uuid())
  planningOrderId String
  planningOrder   PlanningOrder @relation(fields: [planningOrderId], references: [id])
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model Product {
  id          String  @id @default(uuid())
  businessId  String
  name        String
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  business Business @relation(fields: [businessId], references: [id])
}
